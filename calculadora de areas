import math

# Funciones para calcular áreas
def area_cuadrado(lado):
    return lado * lado

def area_rectangulo(base, altura):
    return base * altura

def area_circulo(radio):
    return math.pi * radio ** 2

def area_triangulo(base, altura):
    return (base * altura) / 2

def area_trapecio(base_menor, base_mayor, altura):
    return ((base_menor + base_mayor) * altura) / 2

def area_rombo(diagonal_mayor, diagonal_menor):
    return (diagonal_mayor * diagonal_menor) / 2

def area_paralelogramo(base, altura):
    return base * altura

def area_pentagono(lado, apotema):
    perimetro = lado * 5
    return (perimetro * apotema) / 2

# Función del menú
def menu():
    print("Selecciona la figura para calcular el área:")
    print("1. Cuadrado")
    print("2. Rectángulo")
    print("3. Círculo")
    print("4. Triángulo")
    print("5. Trapecio")
    print("6. Rombo")
    print("7. Paralelogramo")
    print("8. Pentágono")
    
    opcion = int(input("Opción: "))
    
    if opcion == 1:
        lado = float(input("Ingresa el lado del cuadrado: "))
        print(f"El área del cuadrado es: {area_cuadrado(lado)}")
    elif opcion == 2:
        base = float(input("Ingresa la base del rectángulo: "))
        altura = float(input("Ingresa la altura del rectángulo: "))
        print(f"El área del rectángulo es: {area_rectangulo(base, altura)}")
    elif opcion == 3:
        radio = float(input("Ingresa el radio del círculo: "))
        print(f"El área del círculo es: {area_circulo(radio)}")
    elif opcion == 4:
        base = float(input("Ingresa la base del triángulo: "))
        altura = float(input("Ingresa la altura del triángulo: "))
        print(f"El área del triángulo es: {area_triangulo(base, altura)}")
    elif opcion == 5:
        base_menor = float(input("Ingresa la base menor del trapecio: "))
        base_mayor = float(input("Ingresa la base mayor del trapecio: "))
        altura = float(input("Ingresa la altura del trapecio: "))
        print(f"El área del trapecio es: {area_trapecio(base_menor, base_mayor, altura)}")
    elif opcion == 6:
        diagonal_mayor = float(input("Ingresa la diagonal mayor del rombo: "))
        diagonal_menor = float(input("Ingresa la diagonal menor del rombo: "))
        print(f"El área del rombo es: {area_rombo(diagonal_mayor, diagonal_menor)}")
    elif opcion == 7:
        base = float(input("Ingresa la base del paralelogramo: "))
        altura = float(input("Ingresa la altura del paralelogramo: "))
        print(f"El área del paralelogramo es: {area_paralelogramo(base, altura)}")
    elif opcion == 8:
        lado = float(input("Ingresa el lado del pentágono: "))
        apotema = float(input("Ingresa el apotema del pentágono: "))
        print(f"El área del pentágono es: {area_pentagono(lado, apotema)}")
    else:
        print("Opción no válida.")

# Ejecución del programa
if __name__ == "__main__":
    menu()